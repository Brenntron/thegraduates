- content_for(:page_title) do
  =gravatar_for @user
  %h1.name= "#{@user.first_name} #{@user.last_name}"

  .bio
    %p= "Bio: #{@user.bio}"
  .info
    %p= "Current Employer: #{@user.current_employer}"
    %p= "Email: #{@user.email}"
    %p= "Twitter: @#{@user.twitter}"
    %p= "Linkedin: #{@user.linkedin}"
